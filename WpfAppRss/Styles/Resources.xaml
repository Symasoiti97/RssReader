<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:WpfAppRss.Styles">

    <FontFamily x:Key="FontFamily1">Times Roman</FontFamily>

    <sys:Double x:Key="h1">32</sys:Double>
    <sys:Double x:Key="h2">24</sys:Double>
    <sys:Double x:Key="h3">19</sys:Double>
    <sys:Double x:Key="h4">16</sys:Double>
    <sys:Double x:Key="h5">13</sys:Double>
    
    <SolidColorBrush x:Key="WindowColor">LightSeaGreen</SolidColorBrush>
    <SolidColorBrush x:Key="WindowBorderColor">LightGray</SolidColorBrush>

    <ControlTemplate x:Key="validationFailed">
        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="Violet" BorderThickness="2">
                <AdornedElementPlaceholder />
            </Border>
            <TextBlock Foreground="Red" FontSize="26" FontWeight="Bold">!</TextBlock>
        </StackPanel>
    </ControlTemplate>

</ResourceDictionary>