<Window x:Class="WpfAppRss.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppRss.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            
            <Grid>
                <TextBlock Text="{Binding CurrentUser, FallbackValue=User_Name}"
                           Style="{StaticResource BaseTextBlock}"
                           Margin="4"
                           TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1">
                <Button Content="Add Chanel"
                        Command="{Binding AddChanel_Click}"
                        Style="{StaticResource BaseButton}"/>
            </Grid>
            <Grid Grid.Column="3">
                <Button Content="Setting"
                        Command="{Binding Setting_Click}"
                        Style="{StaticResource BaseButton}"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <TreeView>
                    
                </TreeView>
            </Grid>

            <Grid Grid.Column="1">
                <ListBox>
                    
                </ListBox>
            </Grid>

            <Grid Grid.Column="2">
                <Frame Content="{Binding ContentPage}"
                       NavigationUIVisibility="Hidden"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
